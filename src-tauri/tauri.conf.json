{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "password-manager-app",
  "version": "0.1.0",
  "identifier": "com.password-manager-app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run generate",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "password-manager-app",
        "height": 800,
        "width": 600,
        "maxHeight": 800,
        "maxWidth": 600,
        "minHeight": 800,
        "minWidth": 600,
        "maximizable": false,
        "theme": "Light"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:password-manager-app.db"]
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNGQ0IzMzYyRjVFNDFCOUQKUldTZEcrVDFZalBMUHkwVG5BS0hJVXp4SEJUUndzZUtvYzIvMGsvYUtzRXZRajNVMUE3Tjg4TjQK",
      "endpoints": [
        "https://github.com/Kai17-a/password-manager-app/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
